using System;

class Program
{
    static void Main()
    {
        unsafe
        {
            int number = 42;
            int* p = &number; // pointer to number
            Console.WriteLine("Address: " + (int)p);
            Console.WriteLine("Value: " + *p);

            *p = 100; // change value via pointer
            Console.WriteLine("Updated Value: " + number);
        }
    }
}
